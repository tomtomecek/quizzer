%nav.navbar.navbar-default.layout(role="navigation")
  .container
    .navbar-header
      %a.navbar-brand(href="") Quizzer
    .collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        - if logged_in?
          %li= link_to current_user.username, '', class: "btn btn-default"
          %li
            = link_to sign_out_path, method: :delete, class: "btn btn-default" do
              %i.fa.fa-sign-out
              Sign out
        - elsif logged_in_admin?
          %li= link_to current_admin.email, '', class: "btn btn-default"
          %li
            = link_to admin_sign_out_path, method: :delete, class: "btn btn-default" do
              %i.fa.fa-sign-out
              Sign out
        - else
          %li
            = link_to "/auth/github", class: "btn btn-default" do
              %i.fa.fa-github.fa-2x
              %span.sign_in_btn_text Sign in with GitHub