.jumbotron.ta-admin
  %section.container.admin-login
    = bootstrap_form_tag(url: admin_sign_in_path, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-4", html: { "data-parsley-validate" => ''}) do |f|
      %header.col-sm-offset-2
        %h1 Administrator Login
      = f.email_field :email, value: params[:email] || "", required: true
      = f.password_field :password, required: true, "data-parsley-minlength" => "6", "data-parsley-minlength-message" => "Password must have at least 6 characters."
      = f.form_group do
        .row
          .remember-me
            = f.check_box :remember_me
          .forgot-password
            = link_to "Forgot password?", new_password_reset_path
      = f.form_group control_col: "col-sm-8" do
        = f.submit "Sign in", class: "btn btn-default btn-tealeaf btn-sign-in-admin col-sm-12"
        