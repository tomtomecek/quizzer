.exam.input-group{ id: "answer_#{answer.id}" }
  .input-group-addon
    = check_box_tag "student_answer_ids[]", nil, (true if answer.correct?), disabled: true
  .form-control-static
    %label.answer-view-quiz
      = preserve do
        = markdown(answer.content)
    %label.answer_actions
      = link_to edit_answer_path(answer), remote: true do
        %i.fa.fa-edit.fa-1x
      = link_to answer, method: "delete", data: { confirm: "Are you sure?" }, remote: true do
        %i.fa.fa-times-circle.fa-1x