.exam.input-group{ id: "answer_#{answer.id}" }
  .input-group-addon
    = check_box_tag "student_answer_ids[]", nil, (true if answer.correct?), disabled: true
  .form-control-static
    %label.answer-view-quiz
      = preserve do
        = markdown(answer.content)
  .input-group-addon
    .pull-left(style="font-size: 17px; margin: 5px 0;")
      = link_to edit_answer_path(answer), title: "Edit", remote: true do
        %i.fa.fa-edit.fa-1x
    .pull-left(style="font-size: 17px;")
      = link_to answer, method: "delete", title: "Delete", data: { confirm: "Are you sure?" }, remote: true do
        %i.fa.fa-times-circle.fa-1x