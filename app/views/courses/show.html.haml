.container
  .row
    .col-sm-7
      - @course.quizzes.each do |quiz|
        %h3= quiz.title
        %br
        %p= quiz.description
        %br
        = link_to new_quiz_exam_path(quiz), class: "btn btn-default btn-lg col-sm-12" do
          %span.glyphicon.glyphicon-play-circle
          Start Quiz
        .clearfix
        %hr(style="padding: 5px 0px;")