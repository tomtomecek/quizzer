.container
  .col-sm-7
    - @courses.each do |course|
      .row{ id: "course_#{course.id}" }
        %img.img-responsive(src="http://dummyimage.com/667x320/000/fff.png&text=Course+image")
        %h3= course.title
        %br
        %p.bg-primary= simple_format course.description
        %br
        = link_to course, class: "btn btn-default btn-lg col-sm-12" do
          %span.glyphicon.glyphicon-play-circle
          Enter
        .clearfix
        %hr