%section.container.admin-login
  .col-sm-offset-1
    = bootstrap_form_tag(url: new_password_reset_path, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10", html: { 'data-parsley-validate' => ''}) do |f|
      .col-sm-offset-2
        .col-sm-offset-2
          %h1 Forgot Password?
          %p.forgot_password_paragraph We will send you an email with a link that you can use to reset your password.
        = f.email_field :email, value: params[:email] || "", control_col: "col-sm-5", required: true, "data-parsley-trigger" => "blur"
        = f.form_group do
          = f.submit "Send Email", class: "btn btn-default"
          = link_to "Back", admin_sign_in_path, class: "btn btn-default"