.container.admin-login
  .col-sm-offset-1
    = bootstrap_form_tag(url: new_password_reset_path, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10") do |f|
      .col-sm-offset-2
        %header.col-sm-offset-2
          %h1 Forgot Password?
          %p We will send you an email with a link that you can use to reset your password.
        = f.email_field :email, value: params[:email] || "", control_col: "col-sm-5"
        = f.form_group do
          = f.submit "Send Email", class: "btn btn-default"
          = link_to "Back", ''